set ylabel 'theta (rad)'
set xlabel 'radius (Mpc)'
set xrange [0.5:5]
xave=0.0261
yave=0.9917
zave=0.1257

# PLOT FOR AVERAGED FILAMENT DIRECTION
set terminal postscript color
set output 'MisalignmentAve'
set title 'Misalignment Angle (Filament Average)'
plot 'DM-FILE.dat' using ($1/2):(acos(($9*xave+$10*yave+$11*zave)/(sqrt($9*$9+$10*$10+$11*$11)+sqrt(xave*xave+yave*yave+zave*zave)))) with lines title 'DM', 'GAS-FILE.dat' using ($1/2):(acos($9*xave+$10*yave+$11*zave)/(sqrt($9*$9+$10*$10+$11*$11)*sqrt(xave*xave+yave*yave+zave*zave))) with lines title 'GAS'

# PLOT FOR DIFFERENT FILAMENT DIRECTIONS (DEPENDENT ON RADIUS)
#set terminal postscript color
