#set title 'Misalignment Angle (Radius-Dependent Filament)'
#plot 'DM-FILE.dat' using ($1/2):(acos(($9*$2+$10*$3+$11*$4)/(sqrt($9*$9+$10*$10+$11*$11)+sqrt($2*$2+$3*$3+$4*$4)))) with lines title 'DM', 'GAS-FILE.dat' using ($1/2):(acos($9*$2+$10*$3+$11*$4)/(sqrt($9*$9+$10*$10+$11*$11)*sqrt($2*$2+$3*$3+$4*$4))) with lines title 'GAS'
